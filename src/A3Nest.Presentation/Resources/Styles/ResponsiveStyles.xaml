<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Responsive Design Constants -->
    <x:Double x:Key="MobileBreakpoint">768</x:Double>
    <x:Double x:Key="TabletBreakpoint">1024</x:Double>
    <x:Double x:Key="DesktopBreakpoint">1200</x:Double>
    
    <!-- Spacing System -->
    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingSM">8</x:Double>
    <x:Double x:Key="SpacingMD">16</x:Double>
    <x:Double x:Key="SpacingLG">24</x:Double>
    <x:Double x:Key="SpacingXL">32</x:Double>
    <x:Double x:Key="SpacingXXL">48</x:Double>
    
    <!-- Border Radius System -->
    <x:Double x:Key="BorderRadiusXS">2</x:Double>
    <x:Double x:Key="BorderRadiusSM">4</x:Double>
    <x:Double x:Key="BorderRadiusMD">8</x:Double>
    <x:Double x:Key="BorderRadiusLG">12</x:Double>
    <x:Double x:Key="BorderRadiusXL">16</x:Double>
    <x:Double x:Key="BorderRadiusXXL">24</x:Double>
    
    <!-- Typography Scale -->
    <x:Double x:Key="FontSizeXS">10</x:Double>
    <x:Double x:Key="FontSizeSM">12</x:Double>
    <x:Double x:Key="FontSizeMD">14</x:Double>
    <x:Double x:Key="FontSizeLG">16</x:Double>
    <x:Double x:Key="FontSizeXL">18</x:Double>
    <x:Double x:Key="FontSizeXXL">20</x:Double>
    <x:Double x:Key="FontSize2XL">24</x:Double>
    <x:Double x:Key="FontSize3XL">30</x:Double>
    <x:Double x:Key="FontSize4XL">36</x:Double>
    <x:Double x:Key="FontSize5XL">48</x:Double>
    
    <!-- Elevation System -->
    <x:Double x:Key="ElevationNone">0</x:Double>
    <x:Double x:Key="ElevationSM">2</x:Double>
    <x:Double x:Key="ElevationMD">4</x:Double>
    <x:Double x:Key="ElevationLG">8</x:Double>
    <x:Double x:Key="ElevationXL">12</x:Double>
    <x:Double x:Key="ElevationXXL">24</x:Double>
    
    <!-- Responsive Container Styles -->
    <Style x:Key="ResponsiveContainer" TargetType="Grid">
        <Setter Property="Padding" Value="{StaticResource SpacingMD}" />
        <Setter Property="RowSpacing" Value="{StaticResource SpacingMD}" />
        <Setter Property="ColumnSpacing" Value="{StaticResource SpacingMD}" />
    </Style>
    
    <Style x:Key="ResponsiveContainerMobile" TargetType="Grid" BasedOn="{StaticResource ResponsiveContainer}">
        <Setter Property="Padding" Value="{StaticResource SpacingSM}" />
        <Setter Property="RowSpacing" Value="{StaticResource SpacingSM}" />
        <Setter Property="ColumnSpacing" Value="{StaticResource SpacingSM}" />
    </Style>
    
    <Style x:Key="ResponsiveContainerDesktop" TargetType="Grid" BasedOn="{StaticResource ResponsiveContainer}">
        <Setter Property="Padding" Value="{StaticResource SpacingXL}" />
        <Setter Property="RowSpacing" Value="{StaticResource SpacingLG}" />
        <Setter Property="ColumnSpacing" Value="{StaticResource SpacingLG}" />
    </Style>
    
    <!-- Card Styles -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundCard}, Dark={StaticResource BackgroundCard}}" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource BorderPrimary}, Dark={StaticResource BorderPrimary}}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle {StaticResource BorderRadiusLG}" />
        <Setter Property="Padding" Value="{StaticResource SpacingLG}" />
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource ShadowLight}, Dark={StaticResource Shadow}}"
                    Offset="0,2"
                    Radius="{StaticResource ElevationSM}"
                    Opacity="0.1" />
        </Setter>
    </Style>
    
    <Style x:Key="ElevatedCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource ShadowLight}, Dark={StaticResource Shadow}}"
                    Offset="0,4"
                    Radius="{StaticResource ElevationMD}"
                    Opacity="0.15" />
        </Setter>
    </Style>
    
    <!-- Button Styles -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextOnPrimary}, Dark={StaticResource TextOnPrimary}}" />
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeMD}" />
        <Setter Property="CornerRadius" Value="{StaticResource BorderRadiusMD}" />
        <Setter Property="Padding" Value="{StaticResource SpacingLG},{StaticResource SpacingMD}" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource ShadowLight}, Dark={StaticResource Shadow}}"
                    Offset="0,2"
                    Radius="{StaticResource ElevationSM}"
                    Opacity="0.2" />
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource TextDisabled}, Dark={StaticResource TextDisabled}}" />
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextTertiary}, Dark={StaticResource TextTertiary}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PrimaryDark}, Dark={StaticResource PrimaryLight}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeMD}" />
        <Setter Property="CornerRadius" Value="{StaticResource BorderRadiusMD}" />
        <Setter Property="Padding" Value="{StaticResource SpacingLG},{StaticResource SpacingMD}" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource TextDisabled}, Dark={StaticResource TextDisabled}}" />
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextDisabled}, Dark={StaticResource TextDisabled}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundSecondary}, Dark={StaticResource BackgroundSecondary}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
    <!-- Input Styles -->
    <Style x:Key="ModernEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundSecondary}, Dark={StaticResource Surface}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource TextTertiary}, Dark={StaticResource TextTertiary}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeMD}" />
        <Setter Property="MinimumHeightRequest" Value="48" />
        <Setter Property="Padding" Value="{StaticResource SpacingMD}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundPrimary}, Dark={StaticResource BackgroundSecondary}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource BackgroundTertiary}, Dark={StaticResource SurfaceVariant}}" />
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextDisabled}, Dark={StaticResource TextDisabled}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
    <!-- Typography Styles -->
    <Style x:Key="HeadingLarge" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansBold" />
        <Setter Property="FontSize" Value="{StaticResource FontSize4XL}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="LineHeight" Value="1.2" />
    </Style>
    
    <Style x:Key="HeadingMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansBold" />
        <Setter Property="FontSize" Value="{StaticResource FontSize2XL}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="LineHeight" Value="1.3" />
    </Style>
    
    <Style x:Key="HeadingSmall" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXL}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="LineHeight" Value="1.4" />
    </Style>
    
    <Style x:Key="BodyLarge" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeLG}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimary}}" />
        <Setter Property="LineHeight" Value="1.5" />
    </Style>
    
    <Style x:Key="BodyMedium" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeMD}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondary}}" />
        <Setter Property="LineHeight" Value="1.5" />
    </Style>
    
    <Style x:Key="BodySmall" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeSM}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextTertiary}, Dark={StaticResource TextTertiary}}" />
        <Setter Property="LineHeight" Value="1.4" />
    </Style>
    
    <Style x:Key="Caption" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeXS}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextTertiary}, Dark={StaticResource TextTertiary}}" />
        <Setter Property="LineHeight" Value="1.3" />
    </Style>
    
    <!-- Navigation Styles -->
    <Style x:Key="NavigationItemStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansMedium" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeMD}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondary}}" />
        <Setter Property="Padding" Value="{StaticResource SpacingMD}" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
    
    <Style x:Key="NavigationItemActiveStyle" TargetType="Label" BasedOn="{StaticResource NavigationItemStyle}">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
        <Setter Property="FontFamily" Value="OpenSansSemiBold" />
    </Style>
    
    <!-- Status Indicator Styles -->
    <Style x:Key="SuccessIndicator" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Success}, Dark={StaticResource Success}}" />
        <Setter Property="StrokeShape" Value="RoundRectangle {StaticResource BorderRadiusSM}" />
        <Setter Property="Padding" Value="{StaticResource SpacingSM},{StaticResource SpacingXS}" />
    </Style>
    
    <Style x:Key="WarningIndicator" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Warning}, Dark={StaticResource Warning}}" />
        <Setter Property="StrokeShape" Value="RoundRectangle {StaticResource BorderRadiusSM}" />
        <Setter Property="Padding" Value="{StaticResource SpacingSM},{StaticResource SpacingXS}" />
    </Style>
    
    <Style x:Key="ErrorIndicator" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Error}, Dark={StaticResource Error}}" />
        <Setter Property="StrokeShape" Value="RoundRectangle {StaticResource BorderRadiusSM}" />
        <Setter Property="Padding" Value="{StaticResource SpacingSM},{StaticResource SpacingXS}" />
    </Style>
    
    <Style x:Key="InfoIndicator" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Info}, Dark={StaticResource Info}}" />
        <Setter Property="StrokeShape" Value="RoundRectangle {StaticResource BorderRadiusSM}" />
        <Setter Property="Padding" Value="{StaticResource SpacingSM},{StaticResource SpacingXS}" />
    </Style>

</ResourceDictionary>