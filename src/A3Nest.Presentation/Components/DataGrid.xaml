<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="A3Nest.Presentation.Components.DataGrid"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Border BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
            Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 8">
        <ScrollView Orientation="Both">
            <Grid x:Name="DataGridContainer"
                  BackgroundColor="Transparent">
                <!-- Header will be added programmatically -->
                <CollectionView x:Name="ItemsCollectionView"
                                ItemsSource="{Binding Source={x:Reference DataGridView}, Path=ItemsSource}"
                                BackgroundColor="Transparent">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid x:Name="RowContainer"
                                  BackgroundColor="Transparent"
                                  Padding="8,4">
                                <!-- Row content will be generated programmatically -->
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ScrollView>
    </Border>
</ContentView>